rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Students: Read-only from client, write only via functions
    match /students/{studentId} {
      allow read: if true;  // Allow scanner to read student info
      allow write: if isAdmin();  // Only admin can modify
    }

    // TimeEntries: Scanner can create, admin can read/update
    match /timeEntries/{entryId} {
      allow read: if isAdmin();
      allow create: if true;  // Allow scanner to create entries
      allow update, delete: if isAdmin();
    }

    // Events: Read-only for all, write for admin
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admins collection: Only readable by authenticated admins
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if false;  // Only via backend setup
    }

    // Generated forms: Admin only
    match /generatedForms/{formId} {
      allow read, write: if isAdmin();
    }
  }
}
